<view><swiper class="screen-swiper" indicator-dots="{{true}}"><block wx:for="{{goods.slider}}" wx:for-item="item" wx:for-index="index" wx:key="index"><swiper-item class="swiper-item"><image mode="aspectFill" src="{{item}}"></image></swiper-item></block></swiper><view class="goods-card padding-lg bg-white"><view class="text-black text-lg padding-bottom-lg">{{goods.name}}</view><view class="flex justify-between"><view class="flex align-center"><text class="cu-tag round bg-red margin-right-sm">到手价</text><text class="text-black text-lg">{{"￥"+goods.price}}</text></view></view><view class="flex align-center text-red text-xs"><view class="flex align-center"><text class="cu-tag round bg-red margin-right-sm">市场价</text><text class="text-black text-lg">{{"￥"+goods.marketPrice}}</text></view></view></view><view class="cu-bar bg-white margin-top-sm"><view class="content text-black">— 商品详情 —</view></view><rich-text nodes="{{goods.detail}}"></rich-text><view class="cu-bar bg-white tabbar border shop"><view data-event-opts="{{[['tap',[['handleCollect',['$event']]]]]}}" class="action text-orange" bindtap="__e"><view class="{{[goods.isCollected?'cuIcon-favorfill':'cuIcon-favor']}}"></view>收藏</view><view class="bg-orange submit" data-action="AddCart" data-event-opts="{{[['tap',[['openWechat',['$0'],['goods']]]]]}}" bindtap="__e">微信</view><view class="bg-red submit" data-action="Purchase" data-event-opts="{{[['tap',[['opentelphone',['$0'],['goods']]]]]}}" bindtap="__e">电话</view></view><view class="{{['cu-modal text-left bottom-modal '+(isModalShow?'show':'')+' ']}}"><view class="cu-dialog bg-white"><view class="flex justify-between padding"><view class="goods flex align-end"><image class="photo" src="{{goods.img_md}}"></image><view class="info padding-left"><view class="text-red"><text>价格：</text><text class="text-price">{{goods.price}}</text></view><view class="padding-top-xs text-sm text-grey">请选择规格属性</view></view></view><view data-event-opts="{{[['tap',[['closeSpecsModal',['$event']]]]]}}" class="action" bindtap="__e"><text class="cuIcon-close"></text></view></view><view class="padding-xl"><view class="specs"><view class="title">尺寸</view><view class="flex margin-tb-sm"><block wx:for="{{specs}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view class="{{['cu-btn round margin-right '+(chosedIndex==index?'line-red':'line-grey')]}}" data-index="{{index}}" size="mini" data-event-opts="{{[['tap',[['handleChoseSpecs',['$event']]]]]}}" bindtap="__e">{{''+item.name+''}}</view></block></view></view><view class="specs"><view class="title">数量</view><view class="padding-tb flex align-center text-center"><button class="cu-btn line-gray" size="mini" data-event-opts="{{[['tap',[['handleDecrease',['$event']]]]]}}" bindtap="__e">-</button><view class="count basis-xs solids-top solids-bottom">{{num}}</view><button class="cu-btn line-gray" size="mini" data-event-opts="{{[['tap',[['handleIncrease',['$event']]]]]}}" bindtap="__e">+</button></view></view><view class="padding-tb"><block wx:if="{{action!='Purchase'}}"><button data-event-opts="{{[['tap',[['handleAddCart',['$event']]]]]}}" class="cu-btn bg-red lg" bindtap="__e">加入购物车</button></block><block wx:if="{{action!='AddCart'}}"><button data-event-opts="{{[['tap',[['handlePurchase',['$event']]]]]}}" class="cu-btn bg-red lg" bindtap="__e">立即购买</button></block></view></view></view></view></view>